<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed %>
  <p><input type="checkbox" checked><%= "This task is completed" %></p>
<% else %>
  <p><input type="checkbox"><%= "This task is not completed yet" %></p>
<% end %>

<%= link_to "Edit task", edit_path(@task) %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Back to list", tasks_path %>

